<div class="row">
  <div class="small-6 large-centered columns">
<ul class="pricing-table">
  <li class="title">This Event: <%= @event.name %></li>
  <li class="bullet-item">Location: <%= @event.location %></li>
  <li class="bullet-item">Date: <%= @event.date %></li>
  <li class="price">£<%= @event.cost %></li>
  <li class="cta-button"><a class="button"<%= link_to "Pay Now", new_event_payment_path(@event) %>></a></li>
</ul>
</div>

<div class="edit-delete">
<p class="event-button"><%= button_to 'Edit Event', edit_event_path(@event), method: :get %></p>
<p class="event-button"><%= button_to 'Delete Event', event_path, method: :delete, data: {confirm: "Are you Sure?"} %></p>
</div>


<div class="edit-delete">
  <h4>Payment History</h4>
  <% @event.payments.each do |payment| %>
      <ul class="individual-events">
        <li class="individual-events"><%= payment.user.try(:name) %></li>
        <li class="individual-events">£ <%= payment.amount %></li>
      </ul>
    
  <% end %>
</ul>
</div>